{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["DOM"],
    "module": "commonjs",
    "rootDir": "./src",
    "sourceMap": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
